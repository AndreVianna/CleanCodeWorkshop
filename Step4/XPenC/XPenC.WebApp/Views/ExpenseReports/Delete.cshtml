@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Strings

@model XPenC.WebApp.Models.ExpenseReports.ExpenseReportDetails

<h1>@Strings["Delete Expense Report"]&nbsp;@Model.Id</h1>

<h3>@Strings["Are you sure you want to delete this report?"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
    </dl>

    <form asp-action="ExecuteDelete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Confirm" class="btn btn-danger">@Strings["Confirm"]</button>
        <a asp-action="Index" class="btn btn-secondary">@Strings["Cancel"]</a>
    </form>
</div>
